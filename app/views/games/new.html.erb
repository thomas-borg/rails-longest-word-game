<div class="container d-flex flex-column align-items-center">
  <h1>New game</h1>
  <ul id="letter-list" class="list-group list-group-horizontal list-unstyled">
    <% @letters.each do |letter| %>
      <li><%= letter.capitalize %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST" data-turbo="false" class="input-group mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="input-group-append btn btn-primary">
  </form>
</div>
